<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/header_menu"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:contentDescription="菜单按钮"
        android:padding="16dp"
        android:src="@mipmap/header_menu"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/header_login"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/header_white_background"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@drawable/header_corner_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header_menu"
        app:layout_constraintRight_toLeftOf="@+id/header_login"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_icon_jd"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/icon_jd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/header_white_background"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/header_input_vertical_line"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginLeft="6dp"
        android:background="#ddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header_icon_jd"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_search_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header_input_vertical_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="海尔冰箱"
        android:textColor="#ccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header_search_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>